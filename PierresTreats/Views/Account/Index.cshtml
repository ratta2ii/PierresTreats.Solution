@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />


@if (User.Identity.IsAuthenticated)
{
    <p>Welcome user: @User.Identity.Name!</p>
    <p>@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>
    <p>@Html.ActionLink("See all Treats", "Index", "Treats")</p>
    @Html.ActionLink("Go To Homepage", "Index", "Home")
    <br/>
    <br/>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}

else
{
    @Html.ActionLink("Go To Homepage", "Index", "Home")
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}


